@model School_Management_System.Models.faculty
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="name"></label>
        <label>@Html.DisplayFor(fc=>fc.name)</label>

    </div>
    <div class="form-group">
        <label asp-for="address"></label>
        <label>@Html.DisplayFor(fc=>fc.address)</label>
    </div>
    <div class="form-group">
        <label asp-for="department"></label>
        <label>@Html.DisplayNameFor(fc=>fc.department)</label>
    </div>
    <div class="form-group">
        <label asp-for="salary"></label>
        <label>@Html.DisplayFor(fc=>fc.salary)</label>
    </div>
    <div class="form-group">
        <label asp-for="mobile"></label>
        <label>@Html.DisplayFor(fc=>fc.mobile)</label>
    </div>

    <button type="submit" class="btn btn-primary">Delete</button>
</form>
